@model DiskPastel.Models.Produto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout-Administrador.cshtml";
}

<h2>Editar</h2>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idproduto" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Custo" class="control-label"></label>
                <input asp-for="Custo" class="form-control" />
                <span asp-validation-for="Custo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda" class="control-label"></label>
                <input asp-for="Venda" class="form-control" />
                <span asp-validation-for="Venda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdtipoProduto" class="control-label">Tipo Produto</label>
                <select asp-for="IdtipoProduto" class="form-control" asp-items="ViewBag.IdtipoProduto"></select>
                <span asp-validation-for="IdtipoProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Imagem</label>
                <input type="file" name="pic" class="file-chooser form-control" value="@ViewData["filelocation"]?ver=1.3" accept="image/*" required />
            </div>

            <!-- Componente para pré-visualização de Imagem -->
            <img class="preview-img tam-img esp-baixo2" src="@ViewData["filelocation"]" />


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />|
                <a asp-action="Index" class="btn btn-danger">Voltar</a>
            </div>
        </form>
    </div>
</div>


<link href="~/css/Cardapio.css" rel="stylesheet" />
<link href="~/css/index.css" rel="stylesheet" />

<!-- Script para pré-visualização de imagem -->
<script>
    const $ = document.querySelector.bind(document);
    const previewImg = $('.preview-img');
    const fileChooser = $('.file-chooser');

    fileChooser.onchange = e => {
        const fileToUpload = e.target.files.item(0);
        const reader = new FileReader();

        reader.onload = e => previewImg.src = e.target.result;

        reader.readAsDataURL(fileToUpload);
    };
</script>
