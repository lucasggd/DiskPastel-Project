@model IEnumerable<DiskPastel.Models.Produto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Administrador.cshtml";
}

<h2>Produtos</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Custo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                Tipo Produto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Custo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdtipoProdutoNavigation.Nome)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Idproduto">Editar</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Idproduto">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Idproduto">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
