@model IEnumerable<DiskPastel.Models.Destaques>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Administrador.cshtml";
}

<h2>Destaques</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                ID Produto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdprodutoNavigation.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Iddestaque" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Iddestaque" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Iddestaque" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
